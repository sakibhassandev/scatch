<%- include('./partials/header') %>

<% if(success.length>0){ %>
<div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
    <span class="inline-block mt-1 mb-1 text-white">
        <%= success %>
    </span>
</div>
<% } %>

<div class="w-full h-screen flex items-start px-20 py-20">
    <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex flex-col">
            <a class="block w-fit mb-2" href="/owners/admin">All Products</a>
            <a class="block w-fit mb-2" href="/owners/create">Create new product</a>
        </div>
    </div>
    <div class="w-[75%] flex flex-col flex-wrap gap-5 h-screen">
        <a class="text-red-500" href="">Delete all</a>
        <div class="products-container flex flex-wrap items-start gap-5">
            <% products.forEach(function(product){%>
            <div class="w-60">
                <div class="w-full h-52">
                    <img class="w-full h-full object-contain bg-[<%= product.bgcolor %>]"
                        src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                </div>
                <div
                    class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                    <div>
                        <h3><%= product.name %></h3>
                        <h4>à§³ <%= product.price %></h4>
                    </div>
                    <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="">
                        <i class="ri-add-line"></i>
                    </a>
                </div>
            </div>
            <%}) %>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>
